<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/observation_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:labelFor="@+id/observation_UserId_edittext"
                android:text="User Id" />

            <EditText
                android:id="@+id/observation_UserId_edittext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="User Id"
                android:inputType="textCapWords" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:labelFor="@id/observation_created_edittext"
                android:text="Created" />

            <EditText
                android:id="@+id/observation_created_edittext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Created"
                android:inputType="textCapWords" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:labelFor="@id/observation_latitude_edittext"
                android:text="Latitude" />

            <EditText
                android:id="@+id/observation_latitude_edittext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Latitude"
                android:inputType="numberDecimal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:labelFor="@id/observation_longitude_edittext"
                android:text="Longitude" />

            <EditText
                android:id="@+id/observation_longitude_edittext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Longitude"
                android:inputType="numberDecimal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:labelFor="@id/observation_placename_edittext"
                android:text="Place name" />

            <EditText
                android:id="@+id/observation_placename_edittext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Place name"
                android:inputType="numberDecimal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:labelFor="@id/observation_population_edittext"
                android:text="Population" />

            <EditText
                android:id="@+id/observation_population_edittext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Population"
                android:inputType="textCapWords" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:labelFor="@id/observation_comment_edittext"
                android:text="Comment" />

            <EditText
                android:id="@+id/observation_comment_edittext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Comment"
                android:inputType="textCapWords" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:labelFor="@id/observation_nameEnglish_edittext"
                android:text="English name" />

            <EditText
                android:id="@+id/observation_nameEnglish_edittext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="English name"
                android:inputType="textCapWords" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:labelFor="@id/observation_nameDanish_edittext"
                android:text="Danish name" />

            <EditText
                android:id="@+id/observation_nameDanish_edittext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Danish name"
                android:inputType="textCapWords" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="updateObservation"
                android:text="Update" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="deleteObservation"
                android:text="Delete" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="back"
                android:text="Back" />

            <TextView
                android:id="@+id/observation_message_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
